{
  "display_information": {
    "name": "Site Status",
    "description": "Posts alerts when monitored sites go down or recover.",
    "background_color": "#C4453C"
  },
  "features": {
    "bot_user": {
      "display_name": "Site Status",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "incoming-webhook"
      ]
    }
  },
  "settings": {
    "incoming_webhooks": {
      "incoming_webhooks_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": false,
    "token_rotation_enabled": false
  }
}
